@inject NavigationManager NavManager

<div class="jumbotron border mb-4">
    <div class="p-2 bg-light rounded-3">
        <div class="container-fluid py-1">
            <h1 class="display-4 text-center">Welcome to Blazing Trails</h1>
            <p class="text-center lead">Find the most beautiful hiking trails using our blazing fast search!</p>
            <input @onkeydown="SearchForTrail"
                   @bind="_searchTerm"
                   @bind:event="oninput"
                   type="text"
                   placeholder="Search for a trail..."
                   class="form-control form-control-lg" />
        </div>
    </div>
</div>

@code {
    private string _searchTerm = "";

    private void SearchForTrail(KeyboardEventArgs args)
    {
        if (args.Key != "Enter")
        {
            return;
        }

        NavManager.NavigateTo($"/search/{_searchTerm}");
    }
}
